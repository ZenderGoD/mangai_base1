# OpenRouter API Key (Required for LLM story generation)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenAI API Key (Required for image generation with DALL-E)
OPENAI_API_KEY=your_openai_api_key_here

# Convex Deployment URL (Get this after running 'pnpm convex dev')
NEXT_PUBLIC_CONVEX_URL=your_convex_url_here
CONVEX_DEPLOYMENT=your_convex_deployment_here

# Convex Auth (Optional: for GitHub/Google OAuth)
# AUTH_GITHUB_ID=
# AUTH_GITHUB_SECRET=
# AUTH_GOOGLE_ID=
# AUTH_GOOGLE_SECRET=

# Site URL (for OAuth redirects)
# CONVEX_SITE_URL=http://localhost:3000
